---
import WrapperLayout from '../layouts/WrapperLayout.astro';
const pageTitle = "- Projects";
---
<WrapperLayout pageTitle={pageTitle}>

    <div class="container">  

        <!-- Item 1 -->
        <div class="item p-5 sm:p-10">
            <div class="menu">
                <h2 class="text-xl font-bold mb-4 text-white">Now running:</h2>
                
                <li>Unreal Engine 5 Solar System Simulation</li>
                <input type="checkbox" checked>
                <input type="checkbox" disabled>
                <input type="checkbox" disabled>
                <input type="checkbox" disabled>
            </div>    
        </div>  

        <div class="item p-5 sm:p-10">
            <div class="menu">
                <h2 class="text-xl font-bold mb-4 text-white">Upcoming projects:</h2>
                <li>Sofware: Unreal Engine protein visualizer</li>
                <li>Engineering: Autonomous drone</li>
                <li>Sofware: Unreal Engine universe micro-to-macro</li>
                <li>Genetics: DNA Extraction</li>
                <li>Music: Nature controlled synth patches</li>
            </div>    
        </div>    
             
    </div> <!-- Container 2 -->

    <div class="container">
        <div class="item p-5 sm:p-10">
            <h2 class="text-xl font-bold mb-4 text-white">Unreal Engine 5 Solar System Simulation</h2>
            <img src="../../public/images/temp.jpg">
        </div>
    </div>
  
</WrapperLayout>

<style>
li {
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    width: auto; /* Adjust to content */
    height: auto; /* Adjust to content */
    border: 2px solid #3fb0ac3f; /* Border color similar to the checkbox */
    border-radius: 3px; /* Rounded corners */
    background-color: transparent; /* Transparent background */
    cursor: pointer;
    outline: none; /* Remove default focus outline */
    vertical-align: middle;
    padding: 5px 10px; /* Some padding around text */
    margin: 5px 0; /* Space between list items */
    list-style-type: none; /* Remove default list-style */
}
</style>
