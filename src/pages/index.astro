---
import BaseLayout from '../layouts/BaseLayout.astro';
import myImage from "../assets/myc2SQ.jpg"; 
import { Image } from 'astro:assets';
const pageTitle = "Index";
---

<BaseLayout pageTitle={pageTitle}>

<!--from public, but now can pass a width, height  -->    
<!--<Image src="/images/myc2SQ.jpg" alt="A description of my image." 
width={100} height={100}/> -->  

<!-- from assets `alt` is mandatory on the Image component -->

<Image
  src={myImage}
  widths={[240, 540, 720, myImage.width]}
  sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${myImage.width}px`}
  alt="A description of my image."
/>
</BaseLayout>
 