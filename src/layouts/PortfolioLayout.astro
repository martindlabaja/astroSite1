---
import WrapperLayout from './WrapperLayout.astro';
import Menu from '../components/Menu.astro';
const { pageTitle } = Astro.props;
const siteName = 'Martin ';
---

<WrapperLayout pageTitle={pageTitle}>
   
      <!-- Horizontal Container -->
      <div class="container flex-1">      
        
        <div class="menu ml-2 pl-5 sm:p-10">
          <!-- <div class="logo" transition:animate="slide"><a href="/">PORTFOLIO</a></div>       -->
          <Menu />      
        </div>

        <div class="content">
          <div class="item p-5 sm:p-10">
            <slot />  
          </div>    

        </div>   
        
        <div class="filler"></div>

      </div>

      <button id="backToTop" class="fixed bottom-0 w-full p-0 flex justify-center mb-2">
        <img src="/icons/go-up.png" class=" max-w-[30px] invert opacity-50"/>
      </button>

      <script>
        // Get the button
        var mybutton = document.getElementById("backToTop");

        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function() {scrollFunction()};

        function scrollFunction() {
          if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            mybutton.style.display = "flex";
          } else {
            mybutton.style.display = "none";
          }
        }

        // When the user clicks on the button, scroll to the top of the document
        mybutton.onclick = function() {
          document.body.scrollTop = 0; // For Safari
          document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
        }

      </script>
</WrapperLayout>

<style>
.menu {
  flex: 1; 
  min-width: 200px;

}
.content {
  flex: 4;
}
.filler {
  flex:1;
  width: 200px;
}
.content a {
  color: #3fb0ac;
  text-decoration: underline;
  transition: color 0.3s ease;
}
.content a:hover {
  color: #abd4d3;
}
.content h1,h2,h3,h4,strong {
  color: #3fb0ac;
}
.content ul {
  list-style-type: circle;
}


@media (max-width: 1200px) {
    .filler {      
      width: 0px;
    }
    .container {      
      flex-direction: column;
    }
}
</style>