---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<style>
  .postTitle h1 { margin: 0em 0em 1em}
</style>
<BaseLayout pageTitle={'- '+frontmatter.title}>  
  <div class="postTitle"><h1>{frontmatter.title}</h1></div>
  {frontmatter.pubDate.slice(0,10)}  Written by: {frontmatter.author}  
  <img src={frontmatter.image.url} width="50" alt={frontmatter.image.alt} />
  <slot />  
</BaseLayout>

